{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "types": ["react", "node"],
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": false,
    "removeComments": true,
    "noEmitHelpers": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declarationDir": "./types",
    "esModuleInterop": true,
    "strict": true,
  },
  "include": [
    "src",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
